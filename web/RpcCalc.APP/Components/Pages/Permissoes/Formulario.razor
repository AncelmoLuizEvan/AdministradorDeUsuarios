
<EditForm Model="@Model" OnValidSubmit="OnValidateSubmit">
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label for="sistema" class="form-label"><em>*</em>Sistema</label>
        <InputText class="form-control" @bind-Value="@Model.Sistema"></InputText>
        <ValidationMessage For="@(() => Model.Sistema)" />
    </div>
    <div class="mb-3">
        <label class="form-label">Perfil</label>
        <InputSelect @bind-Value="Model.PerfilId" class="form-control">
            <option value="0">Selecione...</option>
            @foreach (var item in Perfis!)
            {
                <option value="@item.Id">@item.Descricao</option>
            }
        </InputSelect>
    </div>
    <div class="mb-3">
        <div class="form-check">
            <InputCheckbox @bind-Value="Model.Acessar"></InputCheckbox>
            <label for="acessar" class="form-check-label">Ativo</label>
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <a @onclick="@GoToPermissoes" class="btn btn-outline-primary">Voltar</a>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-outline-success">Salvar</button>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(_mensagem))
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-danger" role="alert">
                    @_mensagem
                </div>
            </div>
        </div>
    }
</EditForm>

