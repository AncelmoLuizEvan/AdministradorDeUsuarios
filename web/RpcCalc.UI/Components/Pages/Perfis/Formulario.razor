
<EditForm Model="@Model" OnValidSubmit="OnValidateSubmit">
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label for="nome" class="form-label"><em>*</em>Nome</label>
        <InputText class="form-control" @bind-Value="@Model.Nome"></InputText>
        <ValidationMessage For="@(() => Model.Nome)" />
    </div>
    <div class="mb-3">
        <label for="cnpjcpf" class="form-label">Descrição</label>
        <InputText class="form-control" @bind-Value="@Model.Descricao"></InputText>
        <ValidationMessage For="@(() => Model.Descricao)" />
    </div>
    <div class="row">
        <div class="col-2">
            <a @onclick="@GoToPerfis" class="btn btn-outline-primary">Voltar</a>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-outline-success">Salvar</button>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(_mensagem))
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-danger" role="alert">
                    @_mensagem
                </div>
            </div>
        </div>
    }
</EditForm>

