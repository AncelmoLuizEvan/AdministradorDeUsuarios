@page "/permissao/list"
@rendermode InteractiveServer
@attribute [StreamRendering(true)]


<PageTitle>Permissões</PageTitle>
<h3>Administrar Permissão</h3>

<a href="@($"/permissao/create")" class="btn btn-success">Nova Permissão</a>
<br />
<div class="row">
    <div class="col">
        @if (Permissoes is null)
        {
            <div class="row">
                <div class="col">
                    <span><b>Não há permissões cadastradas!</b></span>
                </div>
            </div>
        }
        else if (Permissoes.Count() == 0)
        {
            <div class="row">
                <div class="col">
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Carregando...</span>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Perfil</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Permissoes)
                    {
                        <tr>
                            <td>@item.Sistema</td>
                            <td>@item.Perfil.Nome</td>
                            <td>
                                <a href="@($"permissao/details/{item.Id}")" class="btn btn-outline-primary">Detalhar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>
